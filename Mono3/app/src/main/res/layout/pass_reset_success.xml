<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/white">

    <!-- Success Icon -->
    <ImageView
        android:id="@+id/successIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/profile"
    android:contentDescription="@string/sucess"/>

    <!-- Success Message -->
    <TextView
        android:id="@+id/successMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_password_has_been_reset_successfully"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:fontFamily="@font/rb"/>

    <!-- Return to Sign In Button -->
    <Button
        android:id="@+id/returnToSignInButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/return_to_sign_in"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/custom_green"
        android:layout_marginTop="24dp"
        android:padding="12dp"
    android:elevation="6dp"
    android:focusable="true"
    android:focusableInTouchMode="true"/>

    <!-- Optional: Add a small text below the button -->
    <TextView
        android:id="@+id/optionalMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/if_you_did_not_request_this_change_please_contact_support"
        android:textSize="14sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:fontFamily="@font/rb"/>

</LinearLayout>
